{
  "name": "tradetrust-functions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./netlify/**/*.ts",
    "local:clean": "npx rimraf ./tmp/test-bucket",
    "local:s3": "s3rver -d ./tmp --configure-bucket test-bucket",
    "test": "jest",
    "test:api": "wait-on tcp:9999 tcp:4568 && npm run test",
    "test:serve": "NODE_ENV=test AWS_BUCKET_NAME=test-bucket npm run serve",
    "test:ci": "concurrently -k -s first \"npm:test:serve\" \"npm:local:s3\" \"npm:test:api\"",
    "serve": "netlify functions:serve",
    "start": "npm run local:clean && concurrently \"npm:test:serve\" \"npm:local:s3\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simboonlong/tradetrust-functions.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simboonlong/tradetrust-functions/issues"
  },
  "homepage": "https://github.com/simboonlong/tradetrust-functions#readme",
  "dependencies": {
    "@govtechsg/oa-encryption": "^1.3.5",
    "@govtechsg/oa-verify": "^7.11.0",
    "@netlify/functions": "^1.3.0",
    "aws-sdk": "^2.1231.0",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "express": "^5.0.0-beta.1",
    "http-errors": "^2.0.0",
    "netlify-cli": "^12.0.7",
    "serverless-http": "^3.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "jest": "^29.1.2",
    "s3rver": "^3.7.1",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  }
}
